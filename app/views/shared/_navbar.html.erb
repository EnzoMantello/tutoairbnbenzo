<%# Barre de navigation %>
<nav class="navbar navbar-expand-lg bg-dark" style="background-color: #e3f2fd">
  <%= link_to 'Airbnb', root_path, input_html: { class: 'navbar-brand mb-0 h5' } %>    
  <div class="collapse navbar-collapse" id="navbar">
    <ul class="nav navbar-nav">
      <% if (!user_signed_in?) %>
        <li><%= link_to t('Inscription'), new_user_registration_path %></li>
        <li><%= link_to t('Connexion'), new_user_session_path %></li>
      <% else %>
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <%= image_tag current_user.avatar, height: 30, width: 30, class: "rounded-circle" %>
          </button>
          <ul class="dropdown-menu ">
            <li><a class="dropdown-item" href="#">Mes voyages</a></li>
            <li><%= link_to 'Modifier mon profil', edit_user_registration_path %></li>
            <li><%= link_to t('Deconnexion'), destroy_user_session_path, data: { "turbo-method": :delete } %></li>
          </ul>
        </div>
      <% end %>
    </ul>
  </div>
</nav>