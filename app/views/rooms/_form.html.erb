<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="text-center"> Devenez Hôte Airbnb </h3>
    </div>
    <div class="panel-body">
        <div class="container">
            <%# Contenu du formulaire %>
            <%= form_for @room do |f|%>

                <div class="row">
                    <div class="form-group col-md-4">
                        <div class="text-center">
                            <label>Donner un nom au logement</label>
                            <%= f.text_field :listing_name, placeholder:"ex: Appartement splendide avec vue sur le lagon...", class:"form-control text-center"%>
                        </div>
                    </div>
                </div><br>
                    <%# First row new room %>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                                <label>Genre D'habitation :</label>
                                <%= f.select :home_type, [  ["Maison","Maison"],
                                                            ["Appartement","Appartement"],
                                                            ["Bed and Breakfast","Bed and Breakfast"]],

                                                            id: "home_type",
                                                            prompt:"A sélectionner...",
                                                            class:"form-control"
                                %>
                                <label>Type de Logement :</label>
                                <%= f.select :room_type, [  ["Logement Entier","Logement Entier"],
                                                            ["Chambre Partagée","Chambre Partagée"],
                                                            ["Chambre Privée","Chambre Privée"]],

                                                            id: "room_type",
                                                            prompt:"A sélectionner...",
                                                            class:"form-control"
                                %>
                                <label>Nombre de Voyageur :</label>
                                <%= f.select :accomodate, [ ["1 Voyageur",1],
                                                            ["2 Voyageurs",2],
                                                            ["3 Voyageurs",3],
                                                            ["4 Voyageurs",4],
                                                            ["5 Voyageurs",5],
                                                            ["6 Voyageurs",6]],

                                                            id: "accomodate",
                                                            prompt:"A sélectionner...",
                                                            class:"form-control"
                                %>
                        </div>
                    </div>
                </div>
                    <%# second row new room  %>
                <div class="row">
                    <div class="col col-md-4">
                        <div class="form-group">
                            <label>Nombre de chambres :</label>
                            <%= f.select :bed_room, [   ["1",1],
                                                        ["2",2],
                                                        ["3",3],
                                                        ["4",4]],

                                                        id: "bed_room",
                                                        prompt:"A sélectionner...",
                                                        class:"form-control"
                            %>
                            <label>Nombre de salle de bain :</label>
                            <%= f.select :bath_room, [  ["1",1],
                                                        ["2",2],
                                                        ["3",3],
                                                        ["4",4]],

                                                        id: "bath_room",
                                                        prompt:"A sélectionner...",
                                                        class:"form-control"
                            %>
                            <label>Nombre de chambres :</label>
                            <%= f.select :bed_room, [   ["1",1],
                                                        ["2",2],
                                                        ["3",3],
                                                        ["4",4]],

                                                        id: "bed_room",
                                                        prompt:"A sélectionner...",
                                                        class:"form-control"
                            %>
                        </div>
                    </div>
                </div>
                    <%# Description & address new room  %>
                <div class="row">
                    <div class="form-group col-md-4">
                        <div class="text-center">
                            <div class="form-floating">
                                <label>Donnez nous une description de votre logement</label>
                                <%= f.text_area :summary, placeholder:"600 characters max !", class:"form-control text-center", style:"height: 100px"%>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-4">
                        <div class="text-center">
                            <label>Entrez l'adresse de votre logement</label>
                            <%= f.text_field :address, placeholder:"ex: 24 rue de Lappe 75011 Paris", class:"form-control text-center"%>
                        </div>
                    </div>
                </div>
                    <%# Checkboxes for new room %>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <%= f.check_box :is_wifi %> Wifi
                        </div>
                        <div class="form-group">
                            <%= f.check_box :is_tv %> TV  
                        </div>
                        <div class="form-group">
                            <%= f.check_box :is_closet %> Toilettes
                        </div>
                        <div class="form-group">
                            <%= f.check_box :is_shampoo %> Shampoing
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <%= f.check_box :is_breakfast %> Petit-dejeuner
                        </div>
                        <div class="form-group">
                            <%= f.check_box :is_heating %> Chauffage
                        </div>
                        <div class="form-group">
                            <%= f.check_box :is_air %> Climatisation
                        </div>
                        <div class="form-group">
                            <%= f.check_box :is_kitchen %> Cuisine
                        </div>
                    </div>
                </div>

                    <%# Price for new room  %>
                 <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Prix par nuit</label>
                            <div class="input-group">
                                <%= f.text_field :price, placeholder:"ex: 45€", class: "form-control" %>
                            <div class="input-group-addon">€</div>
                            </div>
                        </div>
                    </div>
                </div>

                    <%# Checkbox for activating the room  %>
                <div class="row">
                    <div class="col-md-4 col-md-offset-1">
                        <div class="form-group">
                            <%= f.check_box :active %> Annonce active
                        </div>
                    </div>
                </div>

                <div class="actions">
                    <%= f.submit "Je valide mon annonce", class:"btn btn-primary btn-lg" %>
                </div>
            <% end %>
        </div>
    </div>
</div>



