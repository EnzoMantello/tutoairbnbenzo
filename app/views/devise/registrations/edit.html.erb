<div class="panel panel-default">
    <div class="panel-heading"><div class="container">
        <div class="col-md-5 col-md-offset-3 text-center">
            <h2>Modification de votre profil :</h2>
            <br>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "shared/"%>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-4">
                        <% if resource.avatar.attached? %>
                            <%= image_tag resource.avatar, height: 130, width: 130, class: "rounded-circle" %>
                        <% else %>
                            <%= image_tag ("default_profil.jpg"), height: 130, width: 130, class: "rounded-circle" %>
                        <% end %>
                    </div>
                    <div class="col-sm-8">
                    <%= f.file_field :avatar %>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <%= f.text_field :fullname, autofocus: true, class: "form-control", placeholder: "Nom d'utilisateur" %>
            </div><br>

            <div class="form-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %>
                </div><br>
            <% end %>

            <div class="form-group">
                <%= f.text_field :phone_number, autofocus: true, class: "form-control", placeholder: "0612345678" %>
            </div>

            <div class="form-group">
                <%= f.text_area :description, class: "form-control text-area", placeholder: "Entrer une description" %>
            </div>

            <div class="form-group">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Nouveau mot de passe" %>
                <% if @minimum_password_length %>
                <% end %>
            </div>

            <div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirmation nouveau mot de passe" %>
            </div><br>

            <div class="form-group">Veuillez entrer votre mot de passe ci-dessous afin que les modifications soient prises en compte
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Mot de passe actuel" %>
            </div><br>

            <button type="button" class="btn btn-outline-secondary "> <%= f.submit "Update" %> </button>
            <button type="button" class="btn btn-outline-secondary "> <%= link_to "Voir mon profil", user_path(current_user.id) %> </button>

            <% end %>
            <p><%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "ÃŠtes-vous sur ?" }, method: :delete %></p>
            <%= link_to "retour", :back %>
            </div>
        </div>
    </div>
</div>
