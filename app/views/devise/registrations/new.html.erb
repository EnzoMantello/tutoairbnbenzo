<div class="container">
  <div class="col-md-5 col-md-offset-3 text-center">
    <h2>Inscription</h2>
    <p><i>Tous les champs sont obligatoires</i></p><br>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.text_field :fullname, autofocus: true, class: "form-control", placeholder: "Entrer votre nom(s)/prÃ©nom(s) complets" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control", placeholder: "example@wanadoo.fr" %>
      </div>

      <div class="form-group">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Choisir un mot de passe" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirmation du mot de passe" %>
      </div><br>

      <div class="actions">
        <%= f.submit "Inscription", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>